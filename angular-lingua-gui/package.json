{
  "name": "angular-lingua-gui",
  "version": "1.0.0",
  "description": "The web based management interface for your angular-lingua translations",
  "main": "./backend/index.ts",
  "scripts": {
    "build": "npm run build-backend && npm run build-frontend",
    "start": "npm run build-frontend && npm run start-backend",
    "ng": "ng",
    "tsc": "tsc",
    "ts-node": "ts-node",
    "build-backend": "tsc -p ./backend",
    "start-backend": "ts-node --project ./backend/tsconfig.json ./backend/src/index.ts --browser=false ./test-data/locales.ts deu ita fra ",
    "watch-backend": "nodemon -e ts --watch backend --exec npm run start-backend",
    "build-frontend": "ng build",
    "start-frontend": "ng serve"
  },
  "dependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.0.1",
    "@angular/common": "^7.0.0",
    "@angular/compiler": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/http": "^7.0.0",
    "@angular/material": "^7.0.1",
    "@angular/platform-browser": "^7.0.0",
    "@angular/platform-browser-dynamic": "^7.0.0",
    "@angular/router": "^7.0.0",
    "chokidar": "^2.0.4",
    "commander": "^2.19.0",
    "core-js": "^2.5.4",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "fuse.js": "^3.3.0",
    "get-port": "^4.0.0",
    "opn": "^5.4.0",
    "rxjs": "~6.3.3",
    "socket.io": "^2.1.1",
    "zone.js": "~0.8.26",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.0",
    "@angular/cli": "~7.0.2",
    "@angular/compiler-cli": "^7.0.0",
    "@angular/language-service": "^7.0.0",
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/get-port": "^4.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.12.0",
    "@types/opn": "^5.1.0",
    "@types/socket.io": "^1.4.38",
    "@types/ws": "^6.0.1",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "nodemon": "^1.18.4",
    "protractor": "~5.4.0",
    "ts-node": "^7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.1.3"
  },
  "bin": {
    "angular-lingua-gui": "ts-node ./backend/src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/css-ch/angular-lingua.git"
  },
  "author": "Donato Wolfisberg <donato.wolfisberg@css.ch>",
  "private": true,
  "license": "AGPL"
}
